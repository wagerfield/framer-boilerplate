doctype html
html(lang='en')

  head

    meta(charset='utf-8')

    title= title

    meta(name='format-detection' content='telephone=no')
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
    meta(name='viewport' content='width=device-width,initial-scale=1,user-scalable=no')

    link(rel='apple-touch-icon' href='assets/icon-120.png')
    link(rel='apple-touch-icon' href='assets/icon-76.png' sizes='76x76')
    link(rel='apple-touch-icon' href='assets/icon-120.png' sizes='120x120')
    link(rel='apple-touch-icon' href='assets/icon-152.png' sizes='152x152')
    link(rel='apple-touch-icon' href='assets/icon-180.png' sizes='180x180')
    link(rel='apple-touch-icon' href='assets/icon-192.png' sizes='192x192')

    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto+Mono')
    link(rel='stylesheet' href='styles/styles.css')

  body.entries

    ul.entryList
      each entry in entries
        li.entryItem #[a.entryAnchor(href=entry.href)= entry.text]

    script(type='text/javascript' src='reload/reload.js')
